<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pic_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10px"
        android:layout_marginTop="15px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择相机:"
            android:textSize="40sp" />

        <Spinner
            android:id="@+id/sp_cam_choose"
            style="@style/sp_content_style"
            android:spinnerMode="dialog" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="2px"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="控制窗口"
            android:textSize="20px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="2px"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="15px"
        android:layout_marginTop="25px"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30sp"
                    android:text="学习目标数:"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/text_learning_all"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30sp"
                    android:text="已学习数目:"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/text_learning_count"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_control_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="10sp"
            android:text="开始"
            android:enabled="false"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="2px"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参数窗口"
                android:textSize="20px" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="2px"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数1:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra1"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数2:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra2"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数3:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra3"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="15px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数4:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra4"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数5:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra5"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数6:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra6"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="15px"
            android:layout_marginRight="30px"
            android:layout_marginBottom="15px"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数7:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra7"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数8:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra8"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text="参数9:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tx_pra9"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30sp"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>



    <TextView
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="说明:本界面为纽扣几何算法训练界面，在完成纽扣基本信息配置后，请确保有技术员权限并按照以下步骤正确操作："
        android:textSize="15px" />
    <TextView
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="        1.操作之前，请检查玻璃转盘是否有异物，准备好训练纽扣。"
        android:textSize="15px" />
    <TextView
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="        2.选择训练相机（几何检测相机默认为相机1），点击开始检测按钮。"
        android:textSize="15px" />
    <TextView
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="        3.在控制窗口中设置训练目标数目（输入数量5-255，默认30）。"
        android:textSize="15px" />

    <TextView
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="        4.放入训练纽扣，点击控制窗口中开始按钮。"
        android:textSize="15px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/page_margin"
        android:layout_marginTop="@dimen/page_margin"
        android:layout_marginRight="@dimen/page_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start_geo_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始训练"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_para_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btn_margin"
            android:text="保存参数"
            android:textSize="30dp" />

    </LinearLayout>


</LinearLayout>