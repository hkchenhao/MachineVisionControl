<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <ImageButton
            android:id="@+id/bt_control_pannel_top"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:background="#0000"
            android:scaleType="fitXY"
            android:src="@mipmap/control_pannel_top" />

        <ImageButton
            android:id="@+id/bt_control_pannel_bottom"
            android:layout_width="150dp"
            android:layout_height="150dp"
             android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#0000"
            android:scaleType="fitXY"
            android:src="@mipmap/control_pannel_bottom" />

        <ImageButton
            android:id="@+id/bt_control_pannel_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
             android:layout_marginLeft="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#0000"
            android:scaleType="fitXY"
            android:src="@mipmap/control_pannel_left" />

        <ImageButton
            android:id="@+id/bt_control_pannel_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
             android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0000"
            android:scaleType="fitXY"
            android:src="@mipmap/control_pannel_right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right">
            <Button
                android:id="@+id/bt_control_pannel_cancel"
                style="@style/bt_control_style"
                android:text="取消"

                android:layout_gravity="bottom"
                android:layout_marginRight="30dp"
                />
            <Button
                android:id="@+id/bt_control_pannel_confirm"
                style="@style/bt_control_style"
                android:text="确认"

                android:layout_marginRight="30dp"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>