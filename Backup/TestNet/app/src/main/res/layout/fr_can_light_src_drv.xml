                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/text_indent_margin"
                    android:text="故障状态："
                    android:textSize="@dimen/fr_text_size" />

