                    android:id="@+id/LSD_error_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    android:textSize="@dimen/fr_text_size" />
            </LinearLayout>
        </LinearLayout>

