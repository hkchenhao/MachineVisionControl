<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="#dddddd"
            android:gravity="center_horizontal"
            android:text="图像采集及显示"
            android:textSize="30sp" />

        <com.hanyu.hust.testnet.ui.view.TitleDivide
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="250dp"
            hy:text="几何缺陷"
            hy:textSize="@dimen/pannel_menu" />

        <include
            android:id="@+id/gv_line1"
            layout="@layout/item_gridline" />

        <com.hanyu.hust.testnet.ui.view.TitleDivide
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="250dp"
            hy:text="表面缺陷"
            hy:textSize="@dimen/pannel_menu" />

        <include
            android:id="@+id/gv_line2"
            layout="@layout/item_gridline" />

        <com.hanyu.hust.testnet.ui.view.TitleDivide
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="250dp"
            hy:text="异物缺陷"
            hy:textSize="@dimen/pannel_menu" />

        <include
            android:id="@+id/gv_line3"
            layout="@layout/item_gridline" />

        <com.hanyu.hust.testnet.ui.view.TitleDivide
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="250dp"
            hy:text="色差缺陷"
            hy:textSize="@dimen/pannel_menu" />

        <include
            android:id="@+id/gv_line4"
            layout="@layout/item_gridline" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/machine_learn_bottom_margin"
        android:background="#dddddd" >

        <Button
            android:id="@+id/bt_return"
            android:layout_width="@dimen/machine_learn_icon_width"
            android:layout_height="@dimen/machine_learn_icon_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/pannel_right_margin"
            android:background="@mipmap/ic_return" />

        <Button
            android:id="@+id/bt_right"
            android:layout_width="@dimen/machine_learn_icon_width"
            android:layout_height="@dimen/machine_learn_icon_height"
            android:layout_marginRight="@dimen/pannel_right_margin"
            android:layout_toLeftOf="@id/bt_return"
            android:background="@mipmap/ic_right" />

        <Button
            android:id="@+id/bt_left"
            android:layout_width="@dimen/machine_learn_icon_width"
            android:layout_height="@dimen/machine_learn_icon_height"
            android:layout_marginRight="@dimen/pannel_right_margin"
            android:layout_toLeftOf="@id/bt_right"
            android:background="@mipmap/ic_left" />
    </RelativeLayout>

</LinearLayout>