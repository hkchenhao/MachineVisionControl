<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="25dp"
            android:background="@mipmap/size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:text="单位:mm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"


        android:orientation="vertical">

        <LinearLayout style="@style/ll_fragment_style">
            <TextView
                style="@style/tv_title_style2"
                android:text="外径" />
            <TextView
                style="@style/tv_title_style1"
                android:text="d:" />

            <EditText
                android:id="@+id/et_outDia"
                style="@style/et_threshold_style" />
        </LinearLayout>


        <LinearLayout style="@style/ll_fragment_style">
            <TextView
                style="@style/tv_title_style2"
                android:text="线孔径" />
            <TextView
                style="@style/tv_title_style1"
                android:text="d0:" />

            <EditText
                android:id="@+id/et_holeDia"
                style="@style/et_threshold_style" />
        </LinearLayout>

        <LinearLayout style="@style/ll_fragment_style">

            <TextView
                style="@style/tv_title_style2"
                android:text="线孔距" />
            <TextView
                style="@style/tv_title_style1"
                android:text="e:" />

            <EditText
                android:id="@+id/et_holeDist"
                style="@style/et_threshold_style" />
        </LinearLayout>

        <LinearLayout style="@style/ll_fragment_style">
            <TextView
                style="@style/tv_title_style2"
                android:text="外径偏差" />
            <TextView
                style="@style/tv_title_style1"
                android:text="Δd:" />

            <TextView
                style="@style/tv_dev_style"
                android:text="+" />

            <EditText
                android:id="@+id/et_outDiaDevUp"
                style="@style/et_dev_style"
                android:text="0.5" />

            <TextView
                style="@style/tv_dev_style"
                android:text="-" />

            <EditText
                android:id="@+id/et_outDiaDevDown"
                style="@style/et_dev_style"
                android:text="0.5" />
        </LinearLayout>

        <LinearLayout style="@style/ll_fragment_style">

            <TextView
                style="@style/tv_title_style2"
                android:text="线孔径偏差" />
            <TextView
                style="@style/tv_title_style1"
                android:text="Δd0:" />

            <TextView
                style="@style/tv_dev_style"
                android:text="+" />

            <EditText
                android:id="@+id/et_holeDiaDevUp"
                style="@style/et_dev_style"
                android:text="0.2" />

            <TextView
                style="@style/tv_dev_style"
                android:text="-" />

            <EditText
                android:id="@+id/et_holeDiaDevDown"
                style="@style/et_dev_style"
                android:text="0.2" />
        </LinearLayout>


        <LinearLayout style="@style/ll_fragment_style">

            <TextView
                style="@style/tv_title_style2"
                android:text="线孔距偏差" />
            <TextView
                style="@style/tv_title_style1"
                android:text="Δe:" />

            <TextView
                style="@style/tv_dev_style"
                android:text="+" />

            <EditText
                android:id="@+id/et_holeDistDevUp"
                style="@style/et_dev_style"
                android:text="0.2" />

            <TextView
                style="@style/tv_dev_style"
                android:text="-" />

            <EditText
                android:id="@+id/et_holeDistDevDown"
                style="@style/et_dev_style"
                android:text="0.2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>