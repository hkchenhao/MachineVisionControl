<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!--     Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- 首页状态窗口内部文字 -->
    <style name="tv_status_window">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="bt_frgment_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_width">120px</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/bg_control_bt</item>
    </style>

    <style name="bt_control_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_width">120px</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/bg_control_bt</item>
    </style>

    <style name="control_button">
        <item name="android:background">@drawable/bg_control_bt</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="control_button1">
        <item name="android:background">@drawable/bg_control_bt</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="tb_link_status">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@mipmap/switch_off_normal</item>
    </style>

    <style name="bt_bottom">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/bg_top_bt</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ll_fragment_style">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="tv_title_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tv_title_style1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="tv_title_style2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tv_title_style3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tv_title_style4">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="et_content_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tv_device_setting">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="device_setting_trigger_et">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="device_setting_trigger_tv_front">
        <item name="android:textSize">30sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <style name="device_setting_trigger_tv_back">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">80dp</item>
    </style>

    <style name="et_threshold_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="et_parameter_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="et_alg_parameter_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="et_dev_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="tv_dev_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="sp_content_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="sp_content_style1">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="sp_content_style2">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="bt_search_style">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">90px</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/bg_control_bt</item>
    </style>

    <style name="tv_search_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/pannel_content</item>
    </style>

    <style name="sp_chooose_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/pannel_content</item>
    </style>

    <style name="checkbox_alg_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:textSize">15px</item>
        <item name="android:text">    </item>
    </style>
    <!--统计分析界面下Style-->
    <style name="tv_static_class_a_style">
        <item name="android:textSize"> 50px </item>
        <item name="android:gravity"> left </item>
    </style>

    <style name="tv_static_class_b_style">
        <item name="android:textSize"> 40px </item>
